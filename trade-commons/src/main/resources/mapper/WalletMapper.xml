<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ybb.trade.mapper.WalletMapper">

    <resultMap id="BaseResultMap" type="com.ybb.trade.entity.Wallet">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="memberId" column="member_id" jdbcType="INTEGER"/>
            <result property="balance" column="balance" jdbcType="DECIMAL"/>
            <result property="frozenBalance" column="frozen_balance" jdbcType="DECIMAL"/>
            <result property="currency" column="currency" jdbcType="VARCHAR"/>
            <result property="isLock" column="is_lock" jdbcType="INTEGER"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,member_id,balance,
        frozen_balance,currency,is_lock,
        status,create_time
    </sql>
    <update id="increaseBalance">
        update wallet  set balance = balance + #{amount}
        where
        id = #{id}
    </update>
    <update id="decreaseBalance">
        update wallet set balance = balance - #{amount}
        where
         balance >= #{amount}
        and
           id = #{id}
    </update>
    <select id="getWalletByMemberAndName" resultType="com.ybb.trade.entity.Wallet">
        select
        <include refid="Base_Column_List" />
        from wallet
        where member_id = #{memberId}
        and currency = #{name}
        and status = 1
        for update;
    </select>
    <select id="listAllByStatus" resultType="com.ybb.trade.entity.Wallet">
        select
        <include refid="Base_Column_List" />
        from wallet
        where is_lock = 0
          and status = 1
    </select>
</mapper>
